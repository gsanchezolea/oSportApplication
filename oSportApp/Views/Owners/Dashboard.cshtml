@model oSportApp.Models.OwnerLeague

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-6">
        <h1>@Model.League.Name</h1>
    </div>
    <div class="col-lg-6">
        <button type="button" onclick="location.href='@Url.Action("Create", "Fields", new { id = Model.League.SportId})'" class="btn btn-primary">Add Field</button>

    </div>
</div>


<div class="row">
    <div class="col-lg-6">
        <div class="row">
            <h4>Approved Teams</h4>
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Team
                            </th>
                            <th>
                                Capacity
                            </th>
                            <th>
                                Approved?
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ApprovedTeams)
                        {
                            <tr>
                                <td>
                                    @item.Team.Name
                                </td>
                                <td>
                                    @item.Team.Capacity
                                </td>
                                <td>
                                    @item.Approved
                                </td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <h4>Team's Pending Approval</h4>
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Team
                            </th>
                            <th>
                                Capacity
                            </th>
                            <th>
                                Approved?
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.PendingTeams)
                        {
                            <tr>
                                <td>
                                    @item.Team.Name
                                </td>
                                <td>
                                    @item.Team.Capacity
                                </td>
                                <td>
                                    @item.Approved
                                </td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>        
    </div>
    <div class="col-lg-6">
        <div class="row">
            <h4>Fields</h4>
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Field 
                            </th>
                            <th>
                                Sport Type
                            </th>
                            <th>
                                Address
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Fields)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Sport.Name
                                </td>
                                <td>
                                    @item.StreetAddress
                                    <br />
                                    @item.City, @item.State
                                    <br />
                                    @item.ZipCode
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>