@model oSportApp.Models.Owner

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2>Welcome @Model.FirstName @Model.LastName,</h2>
        <button type="button" onclick="location.href='@Url.Action("Edit","Owners", new { id = Model.Id})'" class="btn btn-primary">Edit</button>
        <button type="button" onclick="location.href='@Url.Action("Delete","Owners", new { id = Model.Id})'" class="btn btn-danger">X</button>
    </div>    
    <div class="col-lg-6">
        

    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        League Name
                    </th>
                    <th>
                        Sport
                    </th>                    
                    <th>
                        <button type="button" onclick="location.href='@Url.Action("Create", "Leagues")'" class="btn btn-primary">Add League</button>
                    </th>                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Leagues)
                {
                    <tr>
                        <td>
                            @item.League.Name
                        </td>
                        <td>
                            @item.League.Sport.Name
                        </td>
                        <td>
                            <button type="button" onclick="location.href='@Url.Action("Dashboard","Owners", new { id = item.Id})'" class="btn btn-primary">Dashboard</button>
                            <button type="button" onclick="location.href='@Url.Action("Edit","Leagues", new { id = item.League.Id})'" class="btn btn-primary">Edit</button>
                            <button type="button" onclick="location.href='@Url.Action("Delete","Leagues", new { id = item.League.Id})'" class="btn btn-danger">X</button>
                        </td>       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

