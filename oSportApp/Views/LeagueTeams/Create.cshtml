@model oSportApp.Models.LeagueTeam

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    Request to Join
</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OwnerLeague.League"></label>
                <select asp-for="OwnerLeagueId" class="form-control" asp-items="@ViewBag.Leagues"></select>
                <span asp-validation-for="OwnerLeagueId" class="text-danger"></span>
            </div>
            <div class="row">

                @Html.HiddenFor(model => model.CoachTeamId)
                <input type="hidden" id="CoachTeamId" name="CoachTeamId" value="@Model.CoachTeamId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Request Join" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Coaches">Back to Home</a>
</div>

