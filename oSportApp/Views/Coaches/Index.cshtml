@model oSportApp.Models.Coach

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2>Welcome @Model.FirstName @Model.LastName,</h2>
        <button type="button" onclick="location.href='@Url.Action("Edit","Coaches", new { id = Model.Id})'" class="btn btn-primary">Edit</button>
        <button type="button" onclick="location.href='@Url.Action("Delete","Coaches", new { id = Model.Id})'" class="btn btn-danger">X</button>
    </div>
    <div class="col-lg-6">


    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Team Name
                    </th>
                    <th>
                        <button type="button" onclick="location.href='@Url.Action("Create", "Teams")'" class="btn btn-primary">Add Team</button>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Teams)
                {
                    <tr>
                        <td>
                            @item.Team.Name
                        </td>
                        <td>
                            <button type="button" onclick="location.href='@Url.Action("Dashboard","Coaches", new { id = item.Id})'" class="btn btn-primary">Dashboard</button>
                            <button type="button" onclick="location.href='@Url.Action("Edit","Teams", new { id = item.Team.Id})'" class="btn btn-primary">Edit</button>
                            <button type="button" onclick="location.href='@Url.Action("Delete","Teams", new { id = item.Team.Id})'" class="btn btn-danger">X</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
