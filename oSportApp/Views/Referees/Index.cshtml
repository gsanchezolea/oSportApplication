@model oSportApp.Models.Referee

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1>Dashboard</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <h3>
            @Model.FirstName @Model.LastName
        </h3>
        <br />
    </div>
    <div class="col-lg-6">        
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Home Team
                        </th>
                        <th></th>
                        <th>
                            Away Team
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Matches)
                    {
                        <tr>
                            <td>
                                @item.HomeTeam.CoachTeam.Team.Name
                            </td>
                            <td>
                                vs.
                            </td>
                            <td>
                                @item.AwayTeam.CoachTeam.Team.Name
                            </td>
                            <td>
                                <button type="button" onclick="location.href='@Url.Action("Details", "Matches", new { id = item.Id})'" class="btn btn-primary">Details</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>   
</div>

